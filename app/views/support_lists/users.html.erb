<% provide(:title, "Support_list") %>
<h1>支援希望詳細リスト</h1>

<div class="row">
  <div class="item-box">
    <div class="img">
      <div class="img-wrap">
        <% if @item.image_url %>
          <img src="<%= @item.image_url %>" alt="商品画像">
        <% else %>
          <p>no image</p>
        <% end %>
        <div class="card-body">
          <p><%= @users.count %>人が支援表明</p>
          <p><%= @item.name.truncate(30) %></p>
          <p><%= @item.price %>円</p>
        </div>
        <div class="buttons">
          <a href="<%= @item.item_url %>" target="_blank">
            <button class="btn btn-primary">詳細</button>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="support_list_users">
    <h3>支援ユーザー一覧</h3>
    <% @users.each do |user| %>
      <p><span class="btn btn-info"><%= user.name %></span></p>
    <% end %>
  </div>
</div>
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
        <p>メールアドレス： <%= @user.email %></p>
        <p>住所： <%= @user.address %></p>
        <p>電話番号： <%= @user.phone_number %></p>
    </section>
  </aside>
</div>
<%= link_to "プロフィール変更", edit_user_path(current_user) %>


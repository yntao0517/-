<%= provide(:title, "Edit hospital") %>
<h1>病院プロフィール更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@hospital) do |f| %>
      <%= render 'shared/hospital_error_messages' %>

      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :address, "住所" %>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :phone_number, "電話番号" %>
      <%= f.text_field :phone_number, class: 'form-control' %>

      <%= f.label :representative, "代表者" %>
      <%= f.text_field :representative, class: 'form-control' %>

      <%= f.submit "プロフィール更新", class: 'btn btn-primary' %>
      <%= link_to "パスワード変更", "#" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @hospital %>
      <a href="http://gravatar.com/emails" target="_blank">変更</a>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3>アカウント削除</h3>
    <%= link_to "アカウント削除", hospital_path, {data: {confirm: "本当にアカウントを削除しますか？"}, class: "btn btn-danger form-control" } %>
  </div>
</div>